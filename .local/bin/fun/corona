#! /bin/sh

[ "$(stat -c %y ~/.cache/corona | cut -d " " -f1)" != "$(date "+%Y-%m-%d")" ] &&
    curl -s  https://corona-stats.online/hu > ~/.cache/corona

grep "Hungary" ~/.cache/corona |
    sed "s/\s*//g;s/â•‘//g;s/â”‚/;/g" |
    perl -pe 's/\x1b\[[^m]+m//g;' |
    awk -F ";" '{print "ðŸ˜·" $3 " ("$9") ðŸ’€" $5 " ("$7"%) "}'
# awk -F ";" '{print "ðŸ˜·" $3 " ("$9") ðŸ’€" $4 " ("$7"%) "}'